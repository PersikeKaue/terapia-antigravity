// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================
// AUTH TABLES (NextAuth.js / Auth.js v5 required schema)
// ============================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  phone         String?   // Used for WhatsApp automation (Evolution API)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts  Account[]
  sessions  Session[]
  purchases Purchase[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================
// BUSINESS TABLES
// ============================================================

model Product {
  id          String   @id @default(cuid())
  name        String   // Ex: "Mesa Radiônica da Abundância"
  slug        String   @unique
  description String   @db.Text
  shortDesc   String?  // Short tagline for cards
  price       Decimal  @db.Decimal(10, 2)
  imageUrl    String?  // Thumbnail image for landing/dashboard cards
  videoUrl    String?  // Main video player URL (YouTube, Vimeo, direct)
  isActive    Boolean  @default(true)
  order       Int      @default(0) // Display order
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  purchases Purchase[]
  materials Material[]

  @@map("products")
}

model Purchase {
  id               String         @id @default(cuid())
  userId           String
  productId        String
  gatewayPaymentId String?        @unique // Transaction ID from payment gateway
  gatewayName      String?        // "hotmart" | "kiwify" | "stripe"
  status           PurchaseStatus @default(PENDING)
  amount           Decimal?       @db.Decimal(10, 2) // Amount paid
  paidAt           DateTime?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("purchases")
}

model Material {
  id        String       @id @default(cuid())
  productId String
  name      String       // Ex: "Manual de Ativação.pdf"
  fileUrl   String       // URL for secure download (S3, GCS, R2, etc.)
  fileType  MaterialType @default(PDF)
  sizeBytes Int?         // File size in bytes for display
  order     Int          @default(0) // Display order within product
  createdAt DateTime     @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("materials")
}

// ============================================================
// ENUMS
// ============================================================

enum PurchaseStatus {
  PENDING    // Aguardando pagamento
  PAID       // Pago e liberado
  REFUNDED   // Reembolsado
  CANCELLED  // Cancelado
  CHARGEBACK // Chargeback aberto
}

enum MaterialType {
  PDF
  AUDIO
  VIDEO
  IMAGE
  LINK
  OTHER
}
